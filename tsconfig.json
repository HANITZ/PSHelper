{
  "extends": "./tsconfig.path.json",
  "include": ["src/**/*"],
  "outDir": "dist/js",
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types"]
  }
}
